generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Movie {
    // defaults
    id        String   @id @default(uuid()) // or cuid
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // fields
    title       String
    description String
    favorite    Boolean
    imageUrl    String

    // relationships
}
